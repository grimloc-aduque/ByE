extends layout

block content
  
  div.d-flex.justify-content-center
    h1.color-purple #{title}
    
  hr.featurette-divider
  each product in products
    .row.featurette.p-t-5
      .col-md-2.order-md-1.pb-2
        img#image(src = product.image_url width='150' height='150' alt='' p-e-2).mx-auto.m-auto.d-block
      .col-md-3.order-md-2.d-flex.align-items-center.py-1
        h5.lead  #{product.name}
          p.lead #{product.description}

      .col-md-2.order-md-2.d-flex.justify-content-evenly.align-items-center.py-1
        select.form-control
          option 1
          option 2

      .col-md-3.order-md-2.d-flex.justify-content-right.align-items-center.py-1
        b.lead  #{product.price}

      .col-md-2.order-md-2.d-flex.justify-content-right.align-items-center.py-1
         a.lead.button.btn.btn-sm.bg-danger.text-white(href='/products') Eliminar 

      
    hr.featurette-divider
  
        
  
  .container.marketing.bg-light.rounded-bottom.py-4
    .row
    
      .col-lg-4.d-flex.justify-content-evenly.align-items-center.py-2
        p
          a.lead.button.btn.btn-sm.bg-light.border.border-dark(href='/products') #{botonBack}

      .col-lg-4.d-flex.justify-content-evenly.align-items-center.pb-2
          
        b.pl-md-4 #{textoTotal}
              span.pl-md-4 $#{total}

      .col-lg-4.d-flex.justify-content-evenly.align-items-center.py-2
        p
          a.lead.btn.btn-sm.bg-dark.text-white.px-lg-5.px-3(href='/checkout') #{botonContinuar}
  

  
  