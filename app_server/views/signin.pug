extends layout

block content
  
  div.d-flex.justify-content-center
    h1.color-purple #{title}
  br
  .row
    .col-12.col-lg-3
    
    .col-12.col-lg-6
      form(id='createUser', action='' method= 'post' role= 'form')
        
        //- Name input
        .form-outline.mb-4
          input#registerName.form-control(type='text' name='nombre')
          label.form-label(name='nombre') Nombre
        //- Username input
        .form-outline.mb-4
          input#registerUsername.form-control(type='text' name='apellido')
          label.form-label(for='apellido') Apellido
        //- Email input
        .form-outline.mb-4
          input#registerEmail.form-control(type='email' name='mail')
          label.form-label(for='mail') Email
        //- Password input
        .form-outline.mb-4
          input#registerPassword.form-control(type='password' name='contraseña')
          label.form-label(for='contraseña') Contraseña
        //- Repeat Password input
        .form-outline.mb-4
          input#registerRepeatPassword.form-control(type='number', min=0, name='edad')
          label.form-label(for='edad') Edad
        .form-outline.mb-4
          input#registerRepeatPassword.form-control(type='text' name='direccion')
          label.form-label(for='direccion') Direccion
        .form-outline.mb-4
          input#registerRepeatPassword.form-control(type='text' name='telefono')
          label.form-label(for='telefono') Telefono
        
        input.btn.bg-purple.text-white.btn-block.mb-3(form='createUser' type='submit', value='Registrarse')


    .col-12.col-lg-3

  

  p #{mensaje}        