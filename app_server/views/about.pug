extends layout

block content
  div.d-flex.justify-content-center
    h1.color-purple #{title}

  hr.featurette-divider
  .row.featurette
      .col-md-7.order-md-2
        h2.color-purple.featurette-heading  #{description}
        p.lead #{texto}
      .col-md-5.order-md-1
          img.bd-placeholder-img.bd-placeholder-img-lg.featurette-image.img-fluid.mx-auto.m-auto.d-block(width='50%' height='50%' src = about_img)
  
  hr.featurette-divider
  div.d-flex.justify-content-center.featurette
    h1.color-purple #{title2}
  div.d-flex.justify-content-center
    p.lead  #{description2}
  
  
  .row.d-flex.justify-content-evenly
    .col-md-7 
      each product in productos
        li.lead  #{product.nombre_producto} 
    .col-md-5
      img.bd-placeholder-img.bd-placeholder-img-lg.featurette-image.img-fluid.mx-auto.m-auto.d-block(width='40%' height='40%' src = image_product)
      
            
  hr.featurette-divider
  div.d-flex.justify-content-center
    h1.color-purple.p-b-5 #{title3} 
    
          
  .row
    each red in redes
      .col-lg-4.p-4
          img.d-block.m-auto(width='65' height='65' src = red.imagen)
          h2.lead.d-flex.justify-content-center #{red.nombre}
          a.d-flex.justify-content-center.btn.btn-secondary.bg-purple(href= red.link) Ver &raquo;
  
      
  

  
     
  